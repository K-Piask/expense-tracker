generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  categories Category[]
  expenses  Expense[]
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String

  userId Int
  user   User   @relation(fields: [userId], references: [id])

  expenses Expense[]
}

model Expense {
  id         Int      @id @default(autoincrement())
  amount     Int      // trzymaj w groszach (np. 12.34 z≈Ç = 1234)
  date       DateTime
  note       String?
  createdAt  DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])
}